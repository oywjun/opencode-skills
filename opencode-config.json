{
  "mcp": {
    "android": {
      "type": "local",
      "command": [
        "python3",
        "/home/eli/.config/opencode/mcp/android-mcp-server/server.py"
      ],
      "enabled": true
    },
    "mobile": {
      "type": "local",
      "command": [
        "node",
        "/home/eli/.config/opencode/mcp/mobile-mcp/lib/index.js"
      ],
      "enabled": true
    },
    "kotlin": {
      "type": "local",
      "command": [
        "python3",
        "/home/eli/.config/opencode/mcp/kotlin-mcp-server/kotlin_mcp_server.py"
      ],
      "enabled": true
    },
    "filesystem": {
      "type": "local",
      "command": [
        "uvx",
        "mcp-server-filesystem",
        "/home/eli"
      ],
      "enabled": true
    },
    "git": {
      "type": "local",
      "command": [
        "uvx",
        "mcp-server-git",
        "--repository",
        "/home/eli"
      ],
      "enabled": true
    },
    "fetch": {
      "type": "local",
      "command": [
        "uvx",
        "mcp-server-fetch"
      ],
      "enabled": true
    },
    "playwright": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@executeautomation/mcp-playwright"
      ],
      "enabled": true
    }
  },
  "plugin": [
    "oh-my-opencode"
  ],
  "permission": {
    "skill": {
      "*": "allow"
    }
  }
}